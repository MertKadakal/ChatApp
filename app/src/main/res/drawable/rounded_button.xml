<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient android:startColor="#7A220D" android:endColor="#1F1A16" android:angle="90"/>
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
            <stroke android:width="2dp" android:color="#D84315"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient android:startColor="#3F6D45" android:endColor="#1C4919" android:angle="90"/>
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
            <stroke android:width="2dp" android:color="#BF360C"/>
            <shadowColor android:color="#80000000"/>
        </shape>
    </item>
</selector>
